<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <!-- Launcher theme -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launcher</item>
    </style>

    <!-- Text menu theme. -->
    <style name="MenuText">
        <item name="fontFamily">@font/helvetica_nueue_c_b</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Alert dialog theme. -->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:color">@color/colorPrimary</item>
    </style>

    <!-- Edit text theme. -->
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/lightGrey</item>
    </style>

    <!-- Alert dialog cancel button theme. -->
    <style name="CancelButton" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/lightGrey</item>
    </style>

    <!-- Drawer icon theme. -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorAccent</item>
    </style>
</resources>
